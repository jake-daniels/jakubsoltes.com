{
  "name": "jakubsoltes.com",
  "version": "1.0.0",
  "private": true,
  "homepage": "http://jakubsoltes.com/",
  "dependencies": {
    "emailjs-com": "^2.1.0",
    "jquery": "^3.3.1",
    "lodash": "^4.17.5",
    "node-sass-chokidar": "0.0.3",
    "npm-run-all": "^4.1.2",
    "react": "^16.3.1",
    "react-dom": "^16.3.1",
    "react-ga": "^2.5.0",
    "react-router-dom": "^4.2.2",
    "react-scripts-ts": "2.8.0",
    "react-slick": "^0.23.1",
    "slick-carousel": "^1.8.1",
    "urijs": "^1.19.1",
    "uuid": "^3.2.1"
  },
  "scripts": {
    "build-css": "node-sass-chokidar --include-path ./src --include-path ./node_modules src/ -o src/",
    "watch-css": "npm run build-css && node-sass-chokidar --include-path ./src --include-path ./node_modules src/ -o src/ --watch --recursive",
    "start-ts": "react-scripts-ts start",
    "start": "npm-run-all -p watch-css start-ts",
    "build-ts": "react-scripts-ts build",
    "build": "npm-run-all build-css build-ts",
    "test": "react-scripts-ts test --env=jsdom",
    "eject": "react-scripts-ts eject"
  },
  "devDependencies": {
    "@types/jest": "^21.1.8",
    "@types/jquery": "^3.3.1",
    "@types/node": "^8.0.53",
    "@types/react": "^16.3.10",
    "@types/react-dom": "^16.0.5",
    "@types/react-ga": "^2.3.0",
    "@types/react-router-dom": "^4.0.8",
    "@types/react-slick": "^0.23.0",
    "@types/uuid": "^3.4.3",
    "chalk": "^2.3.0",
    "fs-extra": "^4.0.2",
    "tslint-loader": "^3.5.3"
  }
}
